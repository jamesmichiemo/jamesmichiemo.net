h1 Editing piece

.btn = publish_button(@piece)

h2 Words
= render @piece.words 

h2 Add Words 
= form_for [:admin, @piece, @piece.words.build] do |f|
  p
    = f.label :paragraph
    = f.trix_editor :paragraph

  p
    = f.submit


h2 Pictures
= render @piece.pictures
      
h2 Add Pictures 
= form_for [:admin, @piece, @piece.pictures.build] do |f|
  p
    = f.label :image
    = f.file_field :image
  p
    = f.label :caption
    = f.trix_editor :caption
  p
    = f.label :row
    = f.select :row, options_for_select((1..10).to_a)

  p
    = f.submit

= render 'form'

= link_to 'Show', admin_piece_path(@piece)
'|
= link_to 'Back', admin_pieces_path

